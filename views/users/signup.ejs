<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-6 offset-3">
            <h3 class="mb-4">SignUp on Wanderlust</h3>
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div>
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control border-2 " type="email" name="email" id="email" placeholder="user@gmail.com" required>
                    <div class="valid-feedback">looks good!</div>
                </div>

                <div>
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control border-2 " type="text" name="username" id="username" placeholder="username" required>
                    <div class="valid-feedback">
                        looks good!
                    </div>
                </div>

                <div>
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control border-2 " type="password" name="password" id="password" required>
                </div>

                <button class="btn btn-success btn-lg mt-2">SignUp</button>

            </form>
        </div>
    </div>
</body>