<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-6 offset-3">
            <h3 class="mb-4">Login</h3>
            <form action="/login" method="POST" class="needs-validation" novalidate>
                
                <div>
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control border-2 " type="text" name="username" id="username" placeholder="username" required>
                </div>

                <div>
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control border-2 " type="password" name="password" id="password" required>
                </div>

                <button class="btn btn-success btn-lg mt-2">Login</button>

            </form>
        </div>
    </div>
</body>